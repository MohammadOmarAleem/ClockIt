<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#2D2D36"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Add New Class"
            app:titleTextColor="@android:color/white" />

        <!-- Scrollable Form Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Heading -->
                <TextView
                    android:id="@+id/headingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:gravity="center"
                    android:text="Add a New Class"
                    android:textColor="#2D2D36"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/labrador_b_medium" />

                <!-- Class Name -->
                <EditText
                    android:id="@+id/etClassName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E0E0E0"
                    android:fontFamily="@font/labrador_b_medium"
                    android:hint="Class Name"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- Class Code -->
                <EditText
                    android:id="@+id/etClassCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E0E0E0"
                    android:fontFamily="@font/labrador_b_medium"
                    android:hint="Class Code"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- Class Description -->
                <EditText
                    android:id="@+id/etClassDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E0E0E0"
                    android:fontFamily="@font/labrador_b_medium"
                    android:hint="Class Description"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- Teacher Name -->
                <EditText
                    android:id="@+id/etTeacherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E0E0E0"
                    android:fontFamily="@font/labrador_b_medium"
                    android:hint="Teacher Name"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- Start Time -->
                <EditText
                    android:id="@+id/etClassStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E0E0E0"
                    android:fontFamily="@font/labrador_b_medium"
                    android:hint="Start Time (e.g., 9:00 AM)"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- End Time -->
                <EditText
                    android:id="@+id/etClassEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E0E0E0"
                    android:fontFamily="@font/labrador_b_medium"
                    android:hint="End Time (e.g., 11:00 AM)"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- Room Number -->
                <EditText
                    android:id="@+id/etClassRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E0E0E0"
                    android:fontFamily="@font/labrador_b_medium"
                    android:hint="Room Number"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- Days of the Week -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/labrador_b_medium"
                    android:text="Select Days of the Week"
                    android:textColor="#2D2D36"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cbMonday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/labrador_b_medium"
                        android:text="Monday"
                        android:textSize="16sp"
                        android:textColor="#2D2D36" />

                    <CheckBox
                        android:id="@+id/cbTuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/labrador_b_medium"
                        android:text="Tuesday"
                        android:textSize="16sp"
                        android:textColor="#2D2D36" />

                    <CheckBox
                        android:id="@+id/cbWednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/labrador_b_medium"
                        android:text="Wednesday"
                        android:textSize="16sp"
                        android:textColor="#2D2D36" />

                    <CheckBox
                        android:id="@+id/cbThursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/labrador_b_medium"
                        android:text="Thursday"
                        android:textSize="16sp"
                        android:textColor="#2D2D36" />

                    <CheckBox
                        android:id="@+id/cbFriday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/labrador_b_medium"
                        android:text="Friday"
                        android:textSize="16sp"
                        android:textColor="#2D2D36" />

                    <CheckBox
                        android:id="@+id/cbSaturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/labrador_b_medium"
                        android:text="Saturday"
                        android:textSize="16sp"
                        android:textColor="#2D2D36" />

                    <CheckBox
                        android:id="@+id/cbSunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/labrador_b_medium"
                        android:text="Sunday"
                        android:textSize="16sp"
                        android:textColor="#2D2D36" />
                </LinearLayout>

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btnSubmitClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#2D2D36"
                    android:fontFamily="@font/gomme_sans_w04_extrabold"
                    android:padding="12dp"
                    android:text="Add Class"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:itemTextColor="#2D2D36"
        app:itemIconTint="#2D2D36" />
</androidx.drawerlayout.widget.DrawerLayout>
